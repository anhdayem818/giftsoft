<!doctype html>
<!--[if lt IE 7 ]> <html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie ie9" lang="en"> <![endif]-->
<!--[if gt IE 9]><!--><html lang="en"><!--<![endif]-->
  <head data-hook='inside_head'>
    <%= render :partial => 'spree/shared/head' %>
  </head>
  <body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body">
    <div class="container">


      <%= render :partial => 'spree/shared/header' %>
      <%= render :partial => 'spree/shared/promotion_products_slider', :locals => { :promotion_products => @promotion_products } %>
      <div id="content" class="row" data-hook>
        <div class="span12">
          <%= flash_messages %>
          <div class="row">
            <div class="span6">
              <%= breadcrumbs(@taxon) %>
            </div>
            <div class="span6">
              <%#= related_ariticle(@taxon) %>
            </div>
          </div>
          <div class="row">

            <% if content_for? :sidebar %>
              <%= render :partial => 'spree/shared/sidebar' if content_for? :sidebar %>
              <div class="span9">
                <%= yield %>
              </div>
            <% else %>
              <div class="span12">
                <%= render :partial => 'spree/shared/sidebar' if content_for? :sidebar %>
                <%= yield %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%= render :partial => 'spree/shared/footer' %>
    </div>
    <%= render :partial => 'spree/shared/google_analytics' %>

    <%= render 'shared/support' %>
  </body>
</html>
