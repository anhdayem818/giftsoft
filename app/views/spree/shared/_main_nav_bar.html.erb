<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Muamely", root_path, :class=>"brand" %>
        <div class="nav-collapse">
          <ul class="nav">
            <li class="active"><%= link_to t(:home), root_path %></li>
            <li><%= link_to t(:how_to), main_app.static_url("how_to") %></li>
            <li><%= link_to t(:discount), main_app.static_url("discount") %></li>
          </ul>
          <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="<%= t(:search) %>">
          </form>
          <ul class="nav pull-right">
            
            <li class="divider-vertical"></li>
            <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t(:account)  %>  <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to current_user.username, "/" %></li>
                <li><%= link_to "Đơn hàng đã đặt", orders_path %></li>
                <li><a href="<%=main_app.static_path("how_to")%>#point">Điểm tích lũy: <span class="badge badge-info"><%= current_user.point %></span></a></li>
                <li class="divider"></li>
                <li><%= link_to t(:logout), destroy_user_session_path %></li>
              </ul>
            </li>
            <% else %>
              <li><%= link_to t(:login), new_user_session_path %></li>
            <% end %>
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
  </div>
</div>
