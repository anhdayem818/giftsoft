<div data-hook="admin_user_form_fields">
  <%= f.field_container :email do %>
    <%= f.label :email, t(:email) %><br />
    <%= f.email_field :email %>
    <%= error_message_on :user, :email %>
  <% end %>
  
  <%= f.field_container :username do %>
    <%= f.label :username, t(:username) %><br />
    <%= f.text_field :username %>
    <%= error_message_on :user,:username %>
  <% end %>
  <%= f.field_container :point do %>
    <%= f.label :point, t(:point) %><br />
    <%= f.text_field :point %>
    <%= error_message_on :user,:point %>
  <% end %>

  <%= f.field_container :password do %>
    <%= f.label :password, t(:password) %><br />
    <%= f.password_field :password %>
    <%= f.error_message_on :password %>
  <% end %>

  <%= f.field_container :password do %>
    <%= f.label :password_confirmation, t(:confirm_password) %><br />
    <%= f.password_field :password_confirmation %>
    <%= f.error_message_on :password_confirmation %>
  <% end %>
</div>