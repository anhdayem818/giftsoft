<%= link_to_clone product, :class => 'clone' %>
&nbsp;
<%= link_to_delete product unless product.deleted? %>
&nbsp;
<%= link_to_with_icon('edit', t(:resume), "/admin/products/#{product.permalink}/resume", :class => 're
  sume-resource') if product.deleted? %>
