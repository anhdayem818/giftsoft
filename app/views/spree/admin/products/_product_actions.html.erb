  <%= link_to t("print_barcode"), admin_product_variants_url(product), {"class" => "btn"} %>
<% else %>
  <%= link_to t("print_barcode"), main_app.admin_barcode_path(product.master.id), {"class" => "btn"} %>
<% end %>